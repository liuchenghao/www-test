{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "comma-dangle": [
      2,
      {
        "arrays": "ignore",
        "objects": "ignore",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ],
    "spaced-comment": 0,
    "space-before-function-paren": 0,
    "key-spacing": 0,
    "react/jsx-no-bind": 0,
    "react/jsx-indent-props": 0,
    "react/prop-types": 0,
    "react/no-unused-prop-types": 0,
    "jsx-quotes": [
      2,
      "prefer-double"
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "object-curly-spacing": [
      2,
      "always"
    ]
  }
}
